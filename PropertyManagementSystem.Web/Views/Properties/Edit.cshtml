@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "編輯物件";
}

<div class="container">
    <h2>
        <i class="fas fa-edit me-2"></i>@ViewData["Title"]
    </h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="IsActive" />
        
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">基本資訊</h5>
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">標題 <span class="text-danger">*</span></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">描述 <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PropertyType" class="form-label">物件類型 <span class="text-danger">*</span></label>
                                    <select asp-for="PropertyType" class="form-select">
                                        <option value="">請選擇類型</option>
                                        @if (ViewBag.PropertyTypes != null)
                                        {
                                            @foreach (var type in ViewBag.PropertyTypes as PropertyManagementSystem.Core.Models.PropertyType[] ?? new PropertyManagementSystem.Core.Models.PropertyType[0])
                                            {
                                                <option value="@((int)type)" selected="@(Model.PropertyType == type)">@GetPropertyTypeName(type)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="PropertyType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label">狀態 <span class="text-danger">*</span></label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="">請選擇狀態</option>
                                        @if (ViewBag.PropertyStatuses != null)
                                        {
                                            @foreach (var status in ViewBag.PropertyStatuses as PropertyManagementSystem.Core.Models.PropertyStatus[] ?? new PropertyManagementSystem.Core.Models.PropertyStatus[0])
                                            {
                                                <option value="@((int)status)" selected="@(Model.Status == status)">@GetPropertyStatusName(status)</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">地址 <span class="text-danger">*</span></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">城市 <span class="text-danger">*</span></label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="District" class="form-label">區域 <span class="text-danger">*</span></label>
                                    <input asp-for="District" class="form-control" />
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">價格 (新台幣) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">NT$</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Bedrooms" class="form-label">房間數 <span class="text-danger">*</span></label>
                                    <input asp-for="Bedrooms" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Bedrooms" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Bathrooms" class="form-label">衛浴數 <span class="text-danger">*</span></label>
                                    <input asp-for="Bathrooms" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="AreaInSquareMeters" class="form-label">坪數 <span class="text-danger">*</span></label>
                                    <input asp-for="AreaInSquareMeters" class="form-control" type="number" step="0.01" min="0.1" />
                                    <span asp-validation-for="AreaInSquareMeters" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">圖片網址</label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <div class="form-text">請輸入圖片的網址連結</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>返回列表
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary ms-2">
                                    <i class="fas fa-eye me-1"></i>查看詳情
                                </a>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>儲存變更
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>編輯資訊
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">
                                <strong>物件編號：</strong>@Model.Id
                            </small>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">
                                <strong>建立時間：</strong><br>
                                @Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")
                            </small>
                        </div>
                        @if (Model.UpdatedDate.HasValue)
                        {
                            <div class="mb-3">
                                <small class="text-muted">
                                    <strong>最後更新：</strong><br>
                                    @Model.UpdatedDate.Value.ToString("yyyy/MM/dd HH:mm")
                                </small>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-3">
                                <small class="text-muted d-block mb-2"><strong>目前圖片：</strong></small>
                                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" style="max-height: 150px;">
                            </div>
                        }
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-lightbulb me-2"></i>編輯提示
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled small">
                            <li class="mb-2"><i class="fas fa-check text-success me-1"></i>標示 <span class="text-danger">*</span> 的欄位為必填</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-1"></i>價格請輸入新台幣金額</li>
                            <li class="mb-2"><i class="fas fa-check text-success me-1"></i>坪數支援小數點</li>
                            <li class="mb-0"><i class="fas fa-check text-success me-1"></i>圖片請使用有效的網址</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@functions {
    private string GetPropertyTypeName(PropertyManagementSystem.Core.Models.PropertyType type)
    {
        return type switch
        {
            PropertyManagementSystem.Core.Models.PropertyType.Apartment => "公寓",
            PropertyManagementSystem.Core.Models.PropertyType.House => "透天厝",
            PropertyManagementSystem.Core.Models.PropertyType.Studio => "套房",
            PropertyManagementSystem.Core.Models.PropertyType.Villa => "別墅",
            PropertyManagementSystem.Core.Models.PropertyType.Office => "辦公室",
            PropertyManagementSystem.Core.Models.PropertyType.Shop => "店面",
            _ => type.ToString()
        };
    }

    private string GetPropertyStatusName(PropertyManagementSystem.Core.Models.PropertyStatus status)
    {
        return status switch
        {
            PropertyManagementSystem.Core.Models.PropertyStatus.ForSale => "待售",
            PropertyManagementSystem.Core.Models.PropertyStatus.ForRent => "待租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Sold => "已售",
            PropertyManagementSystem.Core.Models.PropertyStatus.Rented => "已租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Pending => "待處理",
            _ => status.ToString()
        };
    }
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
