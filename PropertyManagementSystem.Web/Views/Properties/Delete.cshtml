@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "刪除物件確認";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>刪除物件確認
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>注意：</strong>您確定要刪除此物件嗎？此操作無法復原。
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                var primaryImage = Model.Images.FirstOrDefault(i => i.SortOrder == 0) ?? Model.Images.First();
                                <img src="@primaryImage.ImageUrl" class="img-fluid rounded" alt="@primaryImage.AltText" style="height: 200px; width: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <div class="text-center">
                                        <i class="fas fa-image fa-2x text-muted mb-2"></i>
                                        <p class="text-muted mb-0">暫無圖片</p>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h5 class="mb-3">@Model.Title</h5>
                            
                            <div class="mb-3">
                                <span class="badge bg-info">@GetPropertyTypeName(Model.TypeId)</span>
                                <span class="badge bg-@GetStatusBadgeClass(Model.StatusId) ms-2">@GetPropertyStatusName(Model.StatusId)</span>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>價格：</strong>
                                </div>
                                <div class="col-sm-9">
                                    <span class="text-primary fw-bold">NT$ @Model.Price.ToString("N0")</span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>地址：</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Address
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>城市區域：</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.City @Model.District
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>房間配置：</strong>
                                </div>
                                <div class="col-sm-9">
                                    <i class="fas fa-bed me-1"></i>@Model.Bedrooms 房
                                    <i class="fas fa-bath ms-2 me-1"></i>@Model.Bathrooms 衛
                                    <i class="fas fa-ruler-combined ms-2 me-1"></i>@Model.Area 坪
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3">
                                    <strong>建立時間：</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr>
                        <div>
                            <strong>描述：</strong>
                            <p class="mt-2">@Model.Description</p>
                        </div>
                    }

                    <hr>

                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>返回列表
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary ms-2">
                                <i class="fas fa-eye me-1"></i>查看詳情
                            </a>
                        </div>
                        <div>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('確定要刪除此物件嗎？')">
                                    <i class="fas fa-trash me-1"></i>確認刪除
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetPropertyTypeName(int typeId)
    {
        return typeId switch
        {
            1 => "公寓",
            2 => "透天",
            3 => "電梯大樓",
            _ => $"類型 {typeId}"
        };
    }

    private string GetPropertyStatusName(int statusId)
    {
        return statusId switch
        {
            1 => "待售",
            2 => "已售",
            3 => "出租",
            _ => $"狀態 {statusId}"
        };
    }

    private string GetStatusBadgeClass(int statusId)
    {
        return statusId switch
        {
            1 => "success",
            2 => "dark",
            3 => "primary",
            _ => "secondary"
        };
    }
}
