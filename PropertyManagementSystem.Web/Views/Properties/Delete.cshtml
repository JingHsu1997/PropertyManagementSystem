@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "刪除物件確認";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>刪除物件確認
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-warning me-2"></i>
                        <strong>注意：</strong>您確定要刪除此物件嗎？此操作無法復原。
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title" style="height: 200px; width: 100%; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <div class="text-center">
                                        <i class="fas fa-image fa-2x text-muted mb-2"></i>
                                        <p class="text-muted mb-0">暫無圖片</p>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h5 class="mb-3">@Model.Title</h5>
                            
                            <div class="mb-3">
                                <span class="badge bg-info">@GetPropertyTypeName(Model.PropertyType)</span>
                                <span class="badge bg-@GetStatusBadgeClass(Model.Status) ms-2">@GetPropertyStatusName(Model.Status)</span>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>價格：</strong>
                                </div>
                                <div class="col-sm-9">
                                    <span class="text-primary fw-bold">NT$ @Model.Price.ToString("N0")</span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>地址：</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.Address
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>城市區域：</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.City @Model.District
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-3">
                                    <strong>房間配置：</strong>
                                </div>
                                <div class="col-sm-9">
                                    <i class="fas fa-bed me-1"></i>@Model.Bedrooms 房
                                    <i class="fas fa-bath ms-2 me-1"></i>@Model.Bathrooms 衛
                                    <i class="fas fa-ruler-combined ms-2 me-1"></i>@Model.AreaInSquareMeters 坪
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-3">
                                    <strong>建立時間：</strong>
                                </div>
                                <div class="col-sm-9">
                                    @Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <hr>
                        <div>
                            <strong>描述：</strong>
                            <p class="mt-2">@Model.Description</p>
                        </div>
                    }

                    <hr>

                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>返回列表
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary ms-2">
                                <i class="fas fa-eye me-1"></i>查看詳情
                            </a>
                        </div>
                        <div>
                            <form asp-action="Delete" method="post" style="display: inline;">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('確定要刪除此物件嗎？')">
                                    <i class="fas fa-trash me-1"></i>確認刪除
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetPropertyTypeName(PropertyManagementSystem.Core.Models.PropertyType type)
    {
        return type switch
        {
            PropertyManagementSystem.Core.Models.PropertyType.Apartment => "公寓",
            PropertyManagementSystem.Core.Models.PropertyType.House => "透天厝",
            PropertyManagementSystem.Core.Models.PropertyType.Studio => "套房",
            PropertyManagementSystem.Core.Models.PropertyType.Villa => "別墅",
            PropertyManagementSystem.Core.Models.PropertyType.Office => "辦公室",
            PropertyManagementSystem.Core.Models.PropertyType.Shop => "店面",
            _ => type.ToString()
        };
    }

    private string GetPropertyStatusName(PropertyManagementSystem.Core.Models.PropertyStatus status)
    {
        return status switch
        {
            PropertyManagementSystem.Core.Models.PropertyStatus.ForSale => "待售",
            PropertyManagementSystem.Core.Models.PropertyStatus.ForRent => "待租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Sold => "已售",
            PropertyManagementSystem.Core.Models.PropertyStatus.Rented => "已租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Pending => "待處理",
            _ => status.ToString()
        };
    }

    private string GetStatusBadgeClass(PropertyManagementSystem.Core.Models.PropertyStatus status)
    {
        return status switch
        {
            PropertyManagementSystem.Core.Models.PropertyStatus.ForSale => "success",
            PropertyManagementSystem.Core.Models.PropertyStatus.ForRent => "primary",
            PropertyManagementSystem.Core.Models.PropertyStatus.Sold => "dark",
            PropertyManagementSystem.Core.Models.PropertyStatus.Rented => "dark",
            PropertyManagementSystem.Core.Models.PropertyStatus.Pending => "warning",
            _ => "secondary"
        };
    }
}
