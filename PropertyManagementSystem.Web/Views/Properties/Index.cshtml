@model IEnumerable<PropertyManagementSystem.Core.Models.Property>

@{
    ViewData["Title"] = "物件管理";
}

<div class="container">
    <!-- 頁面標題 -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2><i class="fas fa-home me-2"></i>物件管理</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i>新增物件
            </a>
        </div>
    </div>

    <!-- 搜索表單 -->
    <div class="card mb-4 shadow">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="fas fa-search me-2"></i>搜索條件
            </h5>
        </div>
        <div class="card-body">
            <form method="get" action="@Url.Action("Index")">
                <div class="row">
                    <div class="col-md-3">
                        <label for="city" class="form-label">城市</label>
                        <select name="city" id="city" class="form-select">
                            <option value="">請選擇城市</option>
                            @if (ViewBag.Cities != null)
                            {
                                @foreach (var city in ViewBag.Cities as string[] ?? new string[0])
                                {
                                    <option value="@city" selected="@(Context.Request.Query["city"].ToString() == city)">@city</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="district" class="form-label">區域</label>
                        <input type="text" name="district" id="district" class="form-control" 
                               value="@Context.Request.Query["district"]" placeholder="輸入區域名稱">
                    </div>
                    <div class="col-md-3">
                        <label for="propertyType" class="form-label">物件類型</label>
                        <select name="typeId" id="typeId" class="form-select">
                            <option value="">請選擇類型</option>
                            @if (ViewBag.PropertyTypes != null)
                            {
                                @foreach (var type in ViewBag.PropertyTypes)
                                {
                                    <option value="@type.Id" selected="@(Context.Request.Query["typeId"].ToString() == type.Id.ToString())">
                                        @type.Name
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">狀態</label>
                        <select name="statusId" id="statusId" class="form-select">
                            <option value="">請選擇狀態</option>
                            @if (ViewBag.PropertyStatuses != null)
                            {
                                @foreach (var status in ViewBag.PropertyStatuses)
                                {
                                    <option value="@status.Id" selected="@(Context.Request.Query["statusId"].ToString() == status.Id.ToString())">
                                        @status.Name
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label for="minPrice" class="form-label">最低價格</label>
                        <input type="number" name="minPrice" id="minPrice" class="form-control" 
                               value="@Context.Request.Query["minPrice"]" placeholder="最低價格">
                    </div>
                    <div class="col-md-3">
                        <label for="maxPrice" class="form-label">最高價格</label>
                        <input type="number" name="maxPrice" id="maxPrice" class="form-control" 
                               value="@Context.Request.Query["maxPrice"]" placeholder="最高價格">
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">
                            <i class="fas fa-search me-1"></i>搜尋
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-refresh me-1"></i>清除
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- 物件列表 -->
    @if (Model.Any())
    {
        <div class="row mb-3">
            <div class="col-12">
                <p class="text-muted mb-0">共找到 <strong>@Model.Count()</strong> 筆物件</p>
            </div>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow">
                    @if (item.Images != null && item.Images.Any())
                    {
                        <img src="@item.Images.First().ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">
                                <i class="fas fa-image fa-3x"></i><br>無圖片
                            </span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted">@item.Description</p>
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="fas fa-map-marker-alt"></i> @item.City @item.District
                            </small>
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-info">@GetPropertyTypeName(item.TypeId)</span>
                            <span class="badge bg-@GetStatusBadgeClass(item.StatusId)">@GetPropertyStatusName(item.StatusId)</span>
                        </div>
                        <div class="mb-2">
                            <strong class="text-primary h5">NT$ @item.Price.ToString("N0")</strong>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-bed me-1"></i>@item.Bedrooms 房 | 
                                <i class="fas fa-bath me-1"></i>@item.Bathrooms 衛 | 
                                <i class="fas fa-ruler-combined me-1"></i>@item.Area 坪
                            </small>
                        </div>
                        <div class="mt-auto">
                            <div class="row g-1">
                                <div class="col-12 mb-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm w-100">
                                        <i class="fas fa-eye me-1"></i>查看詳情
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm w-100">
                                        <i class="fas fa-edit me-1"></i>編輯
                                    </a>
                                </div>
                                <div class="col-6">
                                    <button type="button" class="btn btn-danger btn-sm w-100" onclick="confirmDelete(@item.Id, '@Html.Raw(item.Title)')">
                                        <i class="fas fa-trash me-1"></i>刪除
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card bg-light text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-search fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">沒有找到物件</h4>
                        <p class="text-muted">目前沒有符合條件的物件</p>
                        <a asp-action="Create" class="btn btn-success btn-lg">
                            <i class="fas fa-plus me-2"></i>新增物件
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- 刪除確認 Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle me-2"></i>刪除物件
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">您確定要刪除以下物件嗎？</p>
                <div class="alert alert-warning">
                    <strong id="deletePropertyTitle"></strong>
                </div>
                <p class="text-muted small">此操作無法復原。</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <input type="hidden" id="deletePropertyId" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>確認刪除
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(propertyId, propertyTitle) {
            document.getElementById('deletePropertyId').value = propertyId;
            document.getElementById('deletePropertyTitle').textContent = propertyTitle;
            document.getElementById('deleteForm').action = '@Url.Action("Delete")';
            
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}

@functions {
    private string GetPropertyTypeName(int typeId)
    {
        return typeId switch
        {
            1 => "公寓",
            2 => "透天",
            3 => "電梯大樓",
            _ => "其他"
        };
    }

    private string GetPropertyStatusName(int statusId)
    {
        return statusId switch
        {
            1 => "待售",
            2 => "已售",
            3 => "出租",
            _ => "其他"
        };
    }

    private string GetStatusBadgeClass(int statusId)
    {
        return statusId switch
        {
            1 => "success",
            2 => "dark",
            3 => "primary",
            _ => "secondary"
        };
    }
}
