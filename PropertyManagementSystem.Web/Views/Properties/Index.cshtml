@model IEnumerable<PropertyManagementSystem.Core.Models.Property>

@{
    ViewData["Title"] = "房屋物件列表";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <!-- 搜索表單 -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">搜索條件</h5>
            <form method="get" action="@Url.Action("Index")">
                <div class="row">
                    <div class="col-md-3">
                        <label for="city" class="form-label">城市</label>
                        <select name="city" id="city" class="form-select">
                            <option value="">請選擇城市</option>
                            @if (ViewBag.Cities != null)
                            {
                                @foreach (var city in ViewBag.Cities as string[] ?? new string[0])
                                {
                                    <option value="@city" selected="@(Context.Request.Query["city"].ToString() == city)">@city</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="district" class="form-label">區域</label>
                        <input type="text" name="district" id="district" class="form-control" 
                               value="@Context.Request.Query["district"]" placeholder="輸入區域名稱">
                    </div>
                    <div class="col-md-3">
                        <label for="propertyType" class="form-label">物件類型</label>
                        <select name="propertyType" id="propertyType" class="form-select">
                            <option value="">請選擇類型</option>
                            @if (ViewBag.PropertyTypes != null)
                            {
                                @foreach (var type in ViewBag.PropertyTypes as PropertyManagementSystem.Core.Models.PropertyType[] ?? new PropertyManagementSystem.Core.Models.PropertyType[0])
                                {
                                    <option value="@((int)type)" selected="@(Context.Request.Query["propertyType"].ToString() == ((int)type).ToString())">
                                        @GetPropertyTypeName(type)
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label for="status" class="form-label">狀態</label>
                        <select name="status" id="status" class="form-select">
                            <option value="">請選擇狀態</option>
                            @if (ViewBag.PropertyStatuses != null)
                            {
                                @foreach (var status in ViewBag.PropertyStatuses as PropertyManagementSystem.Core.Models.PropertyStatus[] ?? new PropertyManagementSystem.Core.Models.PropertyStatus[0])
                                {
                                    <option value="@((int)status)" selected="@(Context.Request.Query["status"].ToString() == ((int)status).ToString())">
                                        @GetPropertyStatusName(status)
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-3">
                        <label for="minPrice" class="form-label">最低價格</label>
                        <input type="number" name="minPrice" id="minPrice" class="form-control" 
                               value="@Context.Request.Query["minPrice"]" placeholder="最低價格">
                    </div>
                    <div class="col-md-3">
                        <label for="maxPrice" class="form-label">最高價格</label>
                        <input type="number" name="maxPrice" id="maxPrice" class="form-control" 
                               value="@Context.Request.Query["maxPrice"]" placeholder="最高價格">
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">搜索</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">清除</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="text-muted">共找到 @Model.Count() 個物件</span>
        </div>
        <a asp-action="Create" class="btn btn-success">新增物件</a>
    </div>

    <!-- 物件列表 -->
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">無圖片</span>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Description</p>
                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="fas fa-map-marker-alt"></i> @item.City @item.District
                            </small>
                        </div>
                        <div class="mb-2">
                            <span class="badge bg-info">@GetPropertyTypeName(item.PropertyType)</span>
                            <span class="badge bg-@GetStatusBadgeClass(item.Status)">@GetPropertyStatusName(item.Status)</span>
                        </div>
                        <div class="mb-2">
                            <strong class="text-primary">NT$ @item.Price.ToString("N0")</strong>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">
                                @item.Bedrooms 房 | @item.Bathrooms 衛 | @item.AreaInSquareMeters 坪
                            </small>
                        </div>
                        <div class="mt-auto">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">詳細資料</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">編輯</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">刪除</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <h4 class="text-muted">目前沒有符合條件的物件</h4>
            <a asp-action="Create" class="btn btn-primary mt-3">新增第一個物件</a>
        </div>
    }
</div>

@functions {
    private string GetPropertyTypeName(PropertyManagementSystem.Core.Models.PropertyType type)
    {
        return type switch
        {
            PropertyManagementSystem.Core.Models.PropertyType.Apartment => "公寓",
            PropertyManagementSystem.Core.Models.PropertyType.House => "透天厝",
            PropertyManagementSystem.Core.Models.PropertyType.Studio => "套房",
            PropertyManagementSystem.Core.Models.PropertyType.Villa => "別墅",
            PropertyManagementSystem.Core.Models.PropertyType.Office => "辦公室",
            PropertyManagementSystem.Core.Models.PropertyType.Shop => "店面",
            _ => type.ToString()
        };
    }

    private string GetPropertyStatusName(PropertyManagementSystem.Core.Models.PropertyStatus status)
    {
        return status switch
        {
            PropertyManagementSystem.Core.Models.PropertyStatus.ForSale => "待售",
            PropertyManagementSystem.Core.Models.PropertyStatus.ForRent => "待租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Sold => "已售",
            PropertyManagementSystem.Core.Models.PropertyStatus.Rented => "已租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Pending => "待處理",
            _ => status.ToString()
        };
    }

    private string GetStatusBadgeClass(PropertyManagementSystem.Core.Models.PropertyStatus status)
    {
        return status switch
        {
            PropertyManagementSystem.Core.Models.PropertyStatus.ForSale => "success",
            PropertyManagementSystem.Core.Models.PropertyStatus.ForRent => "primary",
            PropertyManagementSystem.Core.Models.PropertyStatus.Sold => "dark",
            PropertyManagementSystem.Core.Models.PropertyStatus.Rented => "dark",
            PropertyManagementSystem.Core.Models.PropertyStatus.Pending => "warning",
            _ => "secondary"
        };
    }
}
