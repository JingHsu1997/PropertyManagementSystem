@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "物件詳細資料";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                @if (Model.Images != null && Model.Images.Any())
                {
                    var primaryImage = Model.Images.FirstOrDefault(i => i.SortOrder == 0) ?? Model.Images.First();
                    <img src="@primaryImage.ImageUrl" class="card-img-top" alt="@primaryImage.AltText" style="height: 400px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <div class="text-center">
                            <i class="fas fa-image fa-3x text-muted mb-3"></i>
                            <p class="text-muted">暫無圖片</p>
                        </div>
                    </div>
                }
                <div class="card-body">
                    <h1 class="card-title">@Model.Title</h1>
                    
                    <div class="mb-3">
                        <span class="badge bg-info fs-6">@GetPropertyTypeName(Model.TypeId)</span>
                        <span class="badge bg-@GetStatusBadgeClass(Model.StatusId) fs-6 ms-2">@GetPropertyStatusName(Model.StatusId)</span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h3 class="text-primary">NT$ @Model.Price.ToString("N0")</h3>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="text-muted">
                                <i class="fas fa-bed me-1"></i>@Model.Bedrooms 房
                                <i class="fas fa-bath ms-2 me-1"></i>@Model.Bathrooms 衛
                                <i class="fas fa-ruler-combined ms-2 me-1"></i>@Model.Area 坪
                            </div>
                        </div>
                    </div>

                    <h5 class="mb-3">物件描述</h5>
                    <p class="card-text">@Model.Description</p>

                    <h5 class="mb-3">位置資訊</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>地址：</strong>@Model.Address</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>城市：</strong>@Model.City</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>區域：</strong>@Model.District</p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-muted mb-1">
                                <small>建立時間：@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</small>
                            </p>
                            <p class="text-muted">
                                <small>更新時間：@Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")</small>
                            </p>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i>編輯
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger ms-2">
                                <i class="fas fa-trash me-1"></i>刪除
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>物件資訊
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>類型：</strong>
                        </div>
                        <div class="col-6">
                            @GetPropertyTypeName(Model.TypeId)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>狀態：</strong>
                        </div>
                        <div class="col-6">
                            @GetPropertyStatusName(Model.StatusId)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>價格：</strong>
                        </div>
                        <div class="col-6">
                            NT$ @Model.Price.ToString("N0")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>房間數：</strong>
                        </div>
                        <div class="col-6">
                            @Model.Bedrooms 房
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>衛浴數：</strong>
                        </div>
                        <div class="col-6">
                            @Model.Bathrooms 衛
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>坪數：</strong>
                        </div>
                        <div class="col-6">
                            @Model.Area 坪
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>城市：</strong>
                        </div>
                        <div class="col-6">
                            @Model.City
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary w-100">
                    <i class="fas fa-arrow-left me-1"></i>返回列表
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetPropertyTypeName(int typeId)
    {
        return typeId switch
        {
            1 => "公寓",
            2 => "透天",
            3 => "電梯大樓",
            _ => $"類型 {typeId}"
        };
    }

    private string GetPropertyStatusName(int statusId)
    {
        return statusId switch
        {
            1 => "待售",
            2 => "已售",
            3 => "出租",
            _ => $"狀態 {statusId}"
        };
    }

    private string GetStatusBadgeClass(int statusId)
    {
        return statusId switch
        {
            1 => "success",
            2 => "dark",
            3 => "primary",
            _ => "secondary"
        };
    }
}
