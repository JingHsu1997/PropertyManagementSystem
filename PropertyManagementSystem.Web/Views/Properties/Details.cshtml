@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "物件詳細資料";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow">
                @if (Model.Images != null && Model.Images.Any())
                {
                    var primaryImage = Model.Images.FirstOrDefault(i => i.SortOrder == 0) ?? Model.Images.First();
                    <div class="position-relative">
                        <img src="@primaryImage.ImageUrl" class="card-img-top" alt="@primaryImage.AltText" style="height: 400px; object-fit: cover;">
                    </div>
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center position-relative" style="height: 400px;">
                        <div class="text-center">
                            <i class="fas fa-image fa-3x text-muted mb-3"></i>
                            <p class="text-muted">暫無圖片</p>
                        </div>
                    </div>
                }
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="card-title mb-0">@Model.Title</h1>
                        <span class="badge bg-light text-dark">ID: @Model.Id</span>
                    </div>
                    
                    <div class="mb-4">
                        <span class="badge bg-info fs-6">
                            <i class="fas fa-building me-1"></i>@GetPropertyTypeName(Model.TypeId)
                        </span>
                        <span class="badge bg-@GetStatusBadgeClass(Model.StatusId) fs-6 ms-2">
                            <i class="fas fa-flag me-1"></i>@GetPropertyStatusName(Model.StatusId)
                        </span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h3 class="text-primary">
                                <i class="fas fa-dollar-sign me-2"></i>NT$ @Model.Price.ToString("N0")
                            </h3>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="text-muted">
                                <i class="fas fa-bed me-1"></i>@Model.Bedrooms 房
                                <i class="fas fa-bath ms-2 me-1"></i>@Model.Bathrooms 衛
                                <i class="fas fa-ruler-combined ms-2 me-1"></i>@Model.Area 坪
                            </div>
                        </div>
                    </div>

                    <!-- 物件描述 -->
                    <div class="card bg-light mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-align-left me-2"></i>物件描述
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text mb-0">@Model.Description</p>
                        </div>
                    </div>

                    <!-- 位置資訊 -->
                    <div class="card bg-light mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-map-marker-alt me-2"></i>位置資訊
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <p class="mb-1">
                                        <strong>完整地址：</strong>
                                        <span class="text-primary">@Model.Address</span>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-1">
                                        <strong>城市：</strong>
                                        <span class="badge bg-secondary">@Model.City</span>
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-0">
                                        <strong>區域：</strong>
                                        <span class="badge bg-secondary">@Model.District</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 時間資訊 -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="small text-muted">
                                <i class="fas fa-clock me-1"></i>
                                <strong>建立時間：</strong>@Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="small text-muted">
                                <i class="fas fa-edit me-1"></i>
                                <strong>更新時間：</strong>@Model.UpdatedAt.ToString("yyyy/MM/dd HH:mm")
                            </div>
                        </div>
                    </div>

                    <!-- 操作按鈕 -->
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>返回列表
                            </a>
                        </div>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-1"></i>編輯
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="fas fa-trash me-1"></i>刪除
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetPropertyTypeName(int typeId)
    {
        return typeId switch
        {
            1 => "公寓",
            2 => "透天厝",
            3 => "電梯大樓",
            4 => "套房",
            5 => "別墅",
            6 => "辦公室",
            7 => "店面",
            _ => $"類型 {typeId}"
        };
    }

    private string GetPropertyStatusName(int statusId)
    {
        return statusId switch
        {
            1 => "待售",
            2 => "待租",
            3 => "已售",
            4 => "已租",
            5 => "待處理",
            _ => $"狀態 {statusId}"
        };
    }

    private string GetStatusBadgeClass(int statusId)
    {
        return statusId switch
        {
            1 => "success",    // 待售
            2 => "primary",    // 待租
            3 => "dark",       // 已售
            4 => "info",       // 已租
            5 => "warning",    // 待處理
            _ => "secondary"
        };
    }
}

@section Scripts {
}
