@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "物件詳細資料";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 400px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <div class="text-center">
                            <i class="fas fa-image fa-3x text-muted mb-3"></i>
                            <p class="text-muted">暫無圖片</p>
                        </div>
                    </div>
                }
                <div class="card-body">
                    <h1 class="card-title">@Model.Title</h1>
                    
                    <div class="mb-3">
                        <span class="badge bg-info fs-6">@GetPropertyTypeName(Model.PropertyType)</span>
                        <span class="badge bg-@GetStatusBadgeClass(Model.Status) fs-6 ms-2">@GetPropertyStatusName(Model.Status)</span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h3 class="text-primary">NT$ @Model.Price.ToString("N0")</h3>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="text-muted">
                                <i class="fas fa-bed me-1"></i>@Model.Bedrooms 房
                                <i class="fas fa-bath ms-2 me-1"></i>@Model.Bathrooms 衛
                                <i class="fas fa-ruler-combined ms-2 me-1"></i>@Model.AreaInSquareMeters 坪
                            </div>
                        </div>
                    </div>

                    <h5 class="mb-3">物件描述</h5>
                    <p class="card-text">@Model.Description</p>

                    <h5 class="mb-3">位置資訊</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>地址：</strong>@Model.Address</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>城市：</strong>@Model.City</p>
                        </div>
                        <div class="col-md-3">
                            <p><strong>區域：</strong>@Model.District</p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-muted mb-1">
                                <small>建立時間：@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</small>
                            </p>
                            @if (Model.UpdatedDate.HasValue)
                            {
                                <p class="text-muted">
                                    <small>更新時間：@Model.UpdatedDate.Value.ToString("yyyy/MM/dd HH:mm")</small>
                                </p>
                            }
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i>編輯
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger ms-2">
                                <i class="fas fa-trash me-1"></i>刪除
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>物件資訊
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>類型：</strong>
                        </div>
                        <div class="col-6">
                            @GetPropertyTypeName(Model.PropertyType)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>狀態：</strong>
                        </div>
                        <div class="col-6">
                            @GetPropertyStatusName(Model.Status)
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>價格：</strong>
                        </div>
                        <div class="col-6">
                            NT$ @Model.Price.ToString("N0")
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>房間數：</strong>
                        </div>
                        <div class="col-6">
                            @Model.Bedrooms 房
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>衛浴數：</strong>
                        </div>
                        <div class="col-6">
                            @Model.Bathrooms 衛
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <strong>坪數：</strong>
                        </div>
                        <div class="col-6">
                            @Model.AreaInSquareMeters 坪
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>城市：</strong>
                        </div>
                        <div class="col-6">
                            @Model.City
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary w-100">
                    <i class="fas fa-arrow-left me-1"></i>返回列表
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetPropertyTypeName(PropertyManagementSystem.Core.Models.PropertyType type)
    {
        return type switch
        {
            PropertyManagementSystem.Core.Models.PropertyType.Apartment => "公寓",
            PropertyManagementSystem.Core.Models.PropertyType.House => "透天厝",
            PropertyManagementSystem.Core.Models.PropertyType.Studio => "套房",
            PropertyManagementSystem.Core.Models.PropertyType.Villa => "別墅",
            PropertyManagementSystem.Core.Models.PropertyType.Office => "辦公室",
            PropertyManagementSystem.Core.Models.PropertyType.Shop => "店面",
            _ => type.ToString()
        };
    }

    private string GetPropertyStatusName(PropertyManagementSystem.Core.Models.PropertyStatus status)
    {
        return status switch
        {
            PropertyManagementSystem.Core.Models.PropertyStatus.ForSale => "待售",
            PropertyManagementSystem.Core.Models.PropertyStatus.ForRent => "待租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Sold => "已售",
            PropertyManagementSystem.Core.Models.PropertyStatus.Rented => "已租",
            PropertyManagementSystem.Core.Models.PropertyStatus.Pending => "待處理",
            _ => status.ToString()
        };
    }

    private string GetStatusBadgeClass(PropertyManagementSystem.Core.Models.PropertyStatus status)
    {
        return status switch
        {
            PropertyManagementSystem.Core.Models.PropertyStatus.ForSale => "success",
            PropertyManagementSystem.Core.Models.PropertyStatus.ForRent => "primary",
            PropertyManagementSystem.Core.Models.PropertyStatus.Sold => "dark",
            PropertyManagementSystem.Core.Models.PropertyStatus.Rented => "dark",
            PropertyManagementSystem.Core.Models.PropertyStatus.Pending => "warning",
            _ => "secondary"
        };
    }
}
