@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "新增物件";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-plus me-2"></i>新增物件
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">
                                <i class="fas fa-tag me-1"></i>標題 <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="請輸入物件標題" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">
                                <i class="fas fa-align-left me-1"></i>描述 <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="請輸入物件詳細描述"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TypeId" class="form-label">
                                        <i class="fas fa-building me-1"></i>物件類型 <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="TypeId" class="form-select">
                                        <option value="">請選擇類型</option>
                                        @if (ViewBag.PropertyTypes != null)
                                        {
                                            @foreach (var type in ViewBag.PropertyTypes)
                                            {
                                                <option value="@type.Id">@type.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="TypeId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="StatusId" class="form-label">
                                        <i class="fas fa-flag me-1"></i>狀態 <span class="text-danger">*</span>
                                    </label>
                                    <select asp-for="StatusId" class="form-select">
                                        <option value="">請選擇狀態</option>
                                        @if (ViewBag.PropertyStatuses != null)
                                        {
                                            @foreach (var status in ViewBag.PropertyStatuses)
                                            {
                                                <option value="@status.Id">@status.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="StatusId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">
                                <i class="fas fa-map-marker-alt me-1"></i>地址 <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Address" class="form-control" placeholder="請輸入完整地址" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">
                                        <i class="fas fa-city me-1"></i>城市 <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="City" class="form-control" placeholder="例：台北市" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="District" class="form-label">
                                        <i class="fas fa-map me-1"></i>區域 <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="District" class="form-control" placeholder="例：信義區" />
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">
                                <i class="fas fa-dollar-sign me-1"></i>價格 (NT$) <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="請輸入價格" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Bedrooms" class="form-label">
                                        <i class="fas fa-bed me-1"></i>房間數 <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Bedrooms" class="form-control" type="number" min="1" placeholder="房數" />
                                    <span asp-validation-for="Bedrooms" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Bathrooms" class="form-label">
                                        <i class="fas fa-bath me-1"></i>衛浴數 <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Bathrooms" class="form-control" type="number" min="1" placeholder="衛浴數" />
                                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Area" class="form-label">
                                        <i class="fas fa-ruler-combined me-1"></i>坪數 <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Area" class="form-control" type="number" step="0.01" min="0.1" placeholder="坪數" />
                                    <span asp-validation-for="Area" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-image me-1"></i>圖片URL
                            </label>
                            <input type="url" class="form-control" name="ImageUrl" id="imageUrl" placeholder="請輸入圖片網址" />
                            <div class="form-text">請輸入有效的圖片網址，例如：https://example.com/image.jpg</div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>返回列表
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>建立物件
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
