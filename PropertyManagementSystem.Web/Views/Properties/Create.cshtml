@model PropertyManagementSystem.Core.Models.Property

@{
    ViewData["Title"] = "新增物件";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">基本資訊</h5>
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">標題</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">描述</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TypeId" class="form-label">物件類型</label>
                                    <select asp-for="TypeId" class="form-select">
                                        <option value="">請選擇類型</option>
                                        @if (ViewBag.PropertyTypes != null)
                                        {
                                            @foreach (var type in ViewBag.PropertyTypes)
                                            {
                                                <option value="@type.Id">@type.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="TypeId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="StatusId" class="form-label">狀態</label>
                                    <select asp-for="StatusId" class="form-select">
                                        <option value="">請選擇狀態</option>
                                        @if (ViewBag.PropertyStatuses != null)
                                        {
                                            @foreach (var status in ViewBag.PropertyStatuses)
                                            {
                                                <option value="@status.Id">@status.Name</option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="StatusId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">地址</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="City" class="form-label">城市</label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="District" class="form-label">區域</label>
                                    <input asp-for="District" class="form-control" />
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">價格</label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Bedrooms" class="form-label">房間數</label>
                                    <input asp-for="Bedrooms" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Bedrooms" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Bathrooms" class="form-label">衛浴數</label>
                                    <input asp-for="Bathrooms" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="Bathrooms" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Area" class="form-label">坪數</label>
                                    <input asp-for="Area" class="form-control" type="number" step="0.01" min="0.1" />
                                    <span asp-validation-for="Area" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">返回列表</a>
                            <button type="submit" class="btn btn-primary">建立</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
