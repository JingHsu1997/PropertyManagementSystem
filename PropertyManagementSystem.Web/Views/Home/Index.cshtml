@using PropertyManagementSystem.Core.Models
@{
    ViewData["Title"] = "房屋物件管理系統";
    var recentProperties = ViewBag.RecentProperties as IEnumerable<Property> ?? new List<Property>();
}

<div class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 10px;">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-home me-3"></i>房屋物件管理系統
        </h1>
        
        <!-- 統計數據 -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-3">
                        <div class="text-center">
                            <h3 class="fw-bold">@ViewBag.TotalProperties</h3>
                            <small>總物件數</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="text-center">
                            <h3 class="fw-bold">@ViewBag.ForSaleCount</h3>
                            <small>待售</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="text-center">
                            <h3 class="fw-bold">@ViewBag.ForRentCount</h3>
                            <small>出租</small>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="text-center">
                            <h3 class="fw-bold">@ViewBag.SoldCount</h3>
                            <small>已售</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
            <a href="@Url.Action("Index", "Properties")" class="btn btn-light btn-lg me-md-2">
                <i class="fas fa-list me-2"></i>查看物件
            </a>
            <a href="@Url.Action("Create", "Properties")" class="btn btn-outline-light btn-lg">
                <i class="fas fa-plus me-2"></i>新增物件
            </a>
        </div>
    </div>
</div>

<!-- 最近物件展示 -->
@if (recentProperties.Any())
{
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3><i class="fas fa-clock me-2"></i>最新物件</h3>
                <a href="@Url.Action("Index", "Properties")" class="btn btn-outline-primary">查看全部</a>
            </div>
            
            <div class="row">
                @foreach (var property in recentProperties)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h6 class="card-title">@property.Title</h6>
                                <p class="card-text text-muted small">@property.City @property.District</p>
                                <div class="mb-2">
                                    <span class="badge bg-info">@GetPropertyTypeName(property.TypeId)</span>
                                    <span class="badge bg-@GetStatusBadgeClass(property.StatusId)">@GetPropertyStatusName(property.StatusId)</span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong class="text-primary">NT$ @property.Price.ToString("N0")</strong>
                                    <div>
                                        <a asp-controller="Properties" asp-action="Details" asp-route-id="@property.Id" 
                                           class="btn btn-sm btn-outline-primary" title="查看詳情">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Properties" asp-action="Edit" asp-route-id="@property.Id" 
                                           class="btn btn-sm btn-outline-warning" title="編輯">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-controller="Properties" asp-action="Delete" asp-route-id="@property.Id" 
                                           class="btn btn-sm btn-outline-danger" title="刪除">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-light text-center py-5">
                <div class="card-body">
                    <i class="fas fa-home fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">尚無物件資料</h4>
                    <a href="@Url.Action("Create", "Properties")" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>新增物件
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@functions {
    private string GetPropertyTypeName(int typeId)
    {
        return typeId switch
        {
            1 => "公寓",
            2 => "透天",
            3 => "電梯大樓",
            _ => "其他"
        };
    }

    private string GetPropertyStatusName(int statusId)
    {
        return statusId switch
        {
            1 => "待售",
            2 => "已售",
            3 => "出租",
            _ => "其他"
        };
    }

    private string GetStatusBadgeClass(int statusId)
    {
        return statusId switch
        {
            1 => "success",
            2 => "dark",
            3 => "primary",
            _ => "secondary"
        };
    }
}
